PACKAGE = Lang_ruby
LIBRARY = lang_ruby
USE_OCAMLFIND = true

FILES[] = logging rchar rid keyword ruby_lexing lexer_state lexer ast parser_helper parser parse pretty
PACK = $(OCamlPackage $(uncapitalize $(PACKAGE)), $(FILES))
LIB = $(OCamlLibrary $(LIBRARY), $(rootname $(PACK)))
OCAMLFLAGS += -annot -for-pack $(PACKAGE)

.PHONY: install uninstall clean

.DEFAULT: $(LIB)

install: uninstall $(LIB)
	$(OCAMLFIND) install $(LIBRARY) $(LIB) $(PACK) META

uninstall:
	$(OCAMLFIND) remove $(LIBRARY)

clean:
	rm -f $(LIB) $(PACK) *.annot *.spot *.spit *.o *.opt *.cm* lexer.ml parser.output parser.ml parser.mli
